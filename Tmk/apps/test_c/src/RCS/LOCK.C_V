@/*
 * $Id$
 */
#include <sys/time.h>
#include <stdio.h>

#include "Tmk.h"

main(argc, argv)
	int		argc;
	char	       *argv[];
{
	struct timeval	start, end;
	int		c, i;

	while ((c = getopt(argc, argv, "")) != -1)
		switch (c) {
		}

	Tmk_startup(argc, argv);

	if (((Tmk_nprocs == 2) && (Tmk_proc_id == 1)) ||
	    ((Tmk_nprocs == 3) && (Tmk_proc_id == 2))) {

		for (i = 1; i < TMK_NLOCKS; i += Tmk_nprocs)
			Tmk_lock_acquire(i);

		for (i = 1; i < TMK_NLOCKS; i += Tmk_nprocs)
			Tmk_lock_release(i);
	}
	Tmk_barrier(0);

	if (Tmk_proc_id == 0) {

		gettimeofday(&start, NULL);

		for (i = 1; i < TMK_NLOCKS; i += Tmk_nprocs)
			Tmk_lock_acquire(i);

		gettimeofday(&end, NULL);

		printf("Elapsed time: %.3f milliseconds\n",
		       (((1000000.0*end.tv_sec) + end.tv_usec) -
			((1000000.0*start.tv_sec) + start.tv_usec))/((1000.0*TMK_NLOCKS)/Tmk_nprocs));
	}
	Tmk_barrier(0);

	Tmk_exit(0);
}
@
